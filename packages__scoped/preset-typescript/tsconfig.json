{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,

     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,

     "experimentalDecorators": true,
     "emitDecoratorMetadata": true
  },
  "include": [
    "src/index.ts"
  ]
}
