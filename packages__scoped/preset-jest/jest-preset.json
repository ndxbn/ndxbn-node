{
  "transform": {
    "\\.tsx?$": "ts-jest"
  },
  "testMatch": [
    "**/__tests__/**/*.ts?(x)",
    "**/?(*.)+(spec|test).ts?(x)"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ],
  "rootDir": "",
  "roots": [
    "<rootDir>/src/"
  ],
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "index.js",
    "index.ts"
  ],
  "testEnvironment": "node"
}
