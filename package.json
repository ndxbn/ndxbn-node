{
  "private": true,
  "// main configuration": "",
  "name": "ndxbn",
  "version": "0.0.10-0",
  "description": "ndxbn cli",
  "main": "",
  "// pacakge meta data": "",
  "keywords": [],
  "author": "sitri@ndxbn <sitri.ndxbn@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndxbn/ndxbn.git"
  },
  "bugs": {
    "url": "https://github.com/ndxbn/ndxbn/issues"
  },
  "homepage": "https://github.com/ndxbn/ndxbn#readme",
  "// for development": "",
  "scripts": {
    "prepare": "run-s bootstrap build",
    "bootstrap": "lerna bootstrap --ci --ignore-scripts",
    "build": "lerna run prepare",
    "release": "lerna publish --yes --ignore-scripts",
    "test": "jest",
    "lint": "prettier -u -l \"**/*\"",
    "fmt": "run-s format",
    "format": "prettier -u --write \"**/**\""
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/config-lerna-scopes": "11.0.0",
    "@ndxbn/preset-jest": "file:packages/@ndxbn/preset-jest",
    "@ndxbn/preset-typescript": "file:packages/@ndxbn/preset-typescript",
    "@types/config": "0.0.37",
    "@types/jest": "26.0.16",
    "config": "3.3.3",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.0",
    "typescript": "4.1.2",
    "winston": "3.3.3",
    "yarn": "1.22.10"
  },
  "jest": {
    "preset": "@ndxbn/preset-jest",
    "projects": [
      "<rootDir>/packages/*/*"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn lint"
    }
  },
  "workspaces": [
    "packages/@ndxbn/*",
    "packages/global.*",
    "servers/*"
  ]
}
