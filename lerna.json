{
  "packages": ["packages/@ndxbn/*", "packages/global/*", "servers/*"],
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "release: publish"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.md"
  ],
  "version": "independent"
}
